<h3>Create a New Goal</h3>
<% flash.each do |notice| %>
  <p><%= notice %>
<% end %>

<form class="" action="<%= goals_url %>" method="post">
  <%= auth_token %>

  <label>
    Goal
    <input type="text" name="goal[goal_title]" value="">
  </label>

  <label>
    Goal Type
    <select class="" name="goal[hidden]">
      <option value="<%= true %>">Private</option>
      <option value="<%= false %>">Public</option>
    </select>
  </label>

  <input type="submit" value="Set Goal">

</form>
